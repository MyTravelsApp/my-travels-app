<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <!-- Spinner -->
        <item name="android:spinnerItemStyle">@style/AppTheme.Spinner.Item</item>
        <item name="android:spinnerDropDownItemStyle">@style/AppTheme.Spinner.DropDownItem</item>
        <!-- Search View -->
        <item name="android:textColorHint">@color/textColorPrimary</item>
        <!-- Action mode -->
        <item name="actionModeStyle">@style/AppTheme.ActionMode</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Action Mode -->
    <style name="AppTheme.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/colorPrimary</item>
    </style>

    <!-- Toolbar -->
    <style name="AppTheme.ActionBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>

    <!-- Dialog Theme -->
    <style name="AppTheme.DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorPrimary">@color/textColorSecundary</item>
    </style>

    <!--Progress Bar -->
    <style name="AppTheme.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">visible</item>
    </style>

    <!-- Splash styles -->

    <style name="AppTheme.SplashImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="AppTheme.SplashLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/splash_text</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!-- Floating buttons -->
    <style name="AppTheme.FloatingButtonBottomEnd">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/floating_button_layout_margin</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>

    <!-- List rows styles -->

    <style name="AppTheme.Row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/lv_row_padding</item>
        <item name="android:background">@color/rowBackground</item>
    </style>

    <style name="AppTheme.RowText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/lv_row_text_size</item>
        <item name="android:textColor">@color/textColorSecundary</item>
    </style>

    <style name="AppTheme.RowSubtext" parent="AppTheme.RowText">
        <item name="android:textSize">@dimen/lv_row_subtext_size</item>
    </style>

    <style name="AppTheme.RowSubtextLabel" parent="AppTheme.RowSubtext">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.RowCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/lv_card_margin</item>
        <item name="android:layout_marginLeft">@dimen/lv_card_margin</item>
        <item name="android:layout_marginRight">@dimen/lv_card_margin</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:background">@drawable/row_background</item>
    </style>

    <style name="AppTheme.RowCardContent" parent="AppTheme.Row">
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Label styles -->
    <style name="AppTheme.Label">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.LabelDisabled">
        <item name="android:textColor">@color/textColorHint</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.FullTextInputLayout" parent="AppTheme.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Inputs styles -->
    <style name="AppTheme.EditText">
        <item name="android:textColor">@color/textColorSecundary</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.FullEditText" parent="AppTheme.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Spinner styles -->

    <style name="AppTheme.Spinner.Item" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/textColorSecundary</item>
    </style>

    <style name="AppTheme.Spinner.DropDownItem" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/textColorSecundary</item>
    </style>

    <!-- Image Button styles -->
    <style name="AppTheme.CalendarButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/ic_today_black_24dp</item>
    </style>

    <!-- Image Button styles Category-->
    <style name="AppTheme.CategoryButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Main views styles -->

    <style name="AppTheme.ViewContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppTheme.DetailViewContainer" parent="AppTheme.ViewContainer">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
    </style>
</resources>
