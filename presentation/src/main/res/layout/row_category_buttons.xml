<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/category_linear_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_below="@+id/txt_title"
        >
        <EditText
            android:id="@+id/txt_edit_category"
            style="@style/AppTheme.RowText"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"/>
        <ImageButton
            android:id="@+id/category_button_add"
            style="@style/AppTheme.CategoryButton"
            android:text="add"
            android:minWidth="50dp"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_check_circle_indigo_900_24dp"
            />
        <ImageButton
            android:id="@+id/category_button_cancel"
            style="@style/AppTheme.CategoryButton"
            android:text="cancel"
            android:minWidth="50dp"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_highlight_off_indigo_900_24dp"
            />
    </LinearLayout >
